<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginTop="5dp"
            android:layout_marginRight="5dp" android:layout_marginBottom="5dp">

     <LinearLayout android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_gravity="center">
         <TextView
                 android:id="@+id/n_match"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="INFO MATCH "
                 android:gravity="center"
                 android:textSize="@dimen/big_text"
                 android:textColor="@color/blue"
                 android:layout_margin="5dp"
         />

         <TextView
                 android:id="@+id/cv_winner"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="winner "
                 android:gravity="center"
                 android:textSize="@dimen/thirty_gap"
                 android:textColor="@color/win"
                 android:layout_margin="5dp"
         />

         <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_gravity="center">
             <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/tv_date"
                     android:text="Date: "
                     android:gravity="center"
                     android:textSize="@dimen/big_gap"

                     android:textColor="@color/time"
                     android:layout_margin="10dp"
             />
             <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/cv_date"
                     android:text="Date"
                     android:gravity="center"
                     android:textSize="@dimen/big_gap"
                     android:textColor="@color/date"
                     android:layout_margin="10dp"
             />

         </LinearLayout>

         <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_gravity="center">
             <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/tv_time"
                     android:text="Time: "
                     android:gravity="center"
                     android:textSize="@dimen/big_gap"
                     android:textColor="@color/time"
                     android:layout_margin="10dp"
             />
             <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/cv_time"
                     android:text="Time"
                     android:gravity="center"
                     android:textSize="@dimen/big_gap"
                     android:textColor="@color/date"
                     android:layout_margin="10dp"
             />

         </LinearLayout>

         <LinearLayout android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:paddingLeft="@dimen/big_text"
         >

             <LinearLayout android:layout_width="202dp"
                           android:layout_height="249dp"
                           android:layout_gravity="center"
                           android:orientation="vertical"
                           android:gravity="center">

                 <TextView
                         android:id="@+id/cv_team_A"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="@string/text_team_a"
                         android:textSize="24dp"
                         android:textColor="@color/colorPrimary"
                 />

                 <TextView
                         android:id="@+id/cv_score_A"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Score"
                         android:textSize="50dp"/>

             </LinearLayout>

             <LinearLayout android:layout_width="202dp"
                           android:layout_height="249dp"
                           android:layout_gravity="center"
                           android:orientation="vertical"
                           android:gravity="center">

                 <TextView
                         android:id="@+id/cv_team_B"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="@string/text_team_b"
                         android:textSize="24dp"
                         android:textColor="@color/colorAccent"
                 />

                 <TextView
                         android:id="@+id/cv_score_B"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Score"
                         android:textSize="50dp"/>

             </LinearLayout>

         </LinearLayout>
     </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>